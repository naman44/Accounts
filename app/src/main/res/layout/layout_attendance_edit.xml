<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/name_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/round_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_att_edit"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="@color/colorAllWhite"
            android:text="Name"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>


    <ImageButton
        android:id="@+id/time_in_edit_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_frame"
        app:srcCompat="@drawable/ic_access_time_24dp" />

    <ImageButton
        android:id="@+id/time_out_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="19dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toEndOf="@+id/time_in_edit"
        app:layout_constraintTop_toBottomOf="@+id/name_frame"
        app:srcCompat="@drawable/ic_access_time_24dp" />

    <Button
        android:id="@+id/save_att_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:text="Save"
        android:background="@drawable/round_corners"
        android:textColor="@color/colorAllWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_att_edit" />

    <EditText
        android:id="@+id/advance_att_edit"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:background="@null"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/time_in_edit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Time In"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_in_edit_btn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Time out"
        app:layout_constraintStart_toEndOf="@+id/time_in_edit"
        app:layout_constraintTop_toBottomOf="@+id/time_out_edit_btn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="59dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:gravity="center_vertical"
        android:text="Advance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/time_in_edit"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/time_in_edit_btn"
        app:layout_constraintTop_toBottomOf="@+id/name_frame" />

    <TextView
        android:id="@+id/time_out_edit"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="?selectableItemBackground"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/name_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>