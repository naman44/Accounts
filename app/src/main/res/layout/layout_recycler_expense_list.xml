<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/layout_expense_list_item"
    android:orientation="vertical" android:layout_width="175dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/amount_expense_list_item"
        android:text="Amount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date_expense_list_item"
        android:text="date"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remark_expense_list_item"
        android:text="Remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

</FrameLayout>