<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/selector_recyclerview_background"
    android:layout_margin="20dp"
    android:clickable="true"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/map_name_manufacture_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:id="@+id/item_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="0.4"
            android:id="@+id/quantity_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="?colorAccent"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/component1_name_dialog"
            android:layout_width="100dp"
            android:text="Component 1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/component1_quantity_dialog"
            android:text="Quantity 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/component2_name_dialog"
            android:layout_width="100dp"
            android:text="Component 2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/component2_quantity_dialog"
            android:text="Quantity 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/component3_name_dialog"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/component3_quantity_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>